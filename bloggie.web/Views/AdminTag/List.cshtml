@model List<bloggie.web.Models.Domain.Tag>



<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>List All Tags - Admin Functionality </h1>
    </div>
</div>

<div class="container py-2">
    @if (Model != null && Model.Any())
    {

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">DisplayName</th>
                    <th scope="col"></th>
                    @* <th scope="col"></th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td>
                            <a asp-area="" asp-controller="AdminTag" asp-action="Edit"
                                asp-route-id="@tag.Id">Edit</a>
                        </td>
                        @* <td>
                            <a asp-area="" asp-controller="AdminTag" asp-action="Delete"
                                asp-route-id="@tag.Id">Delete</a>
                        </td> *@

                    </tr>


                }

            </tbody>
        </table>
    }
    else
    {
        <p>No Data to List!!!</p>
    }

</div>
